<Window x:Class="WpfTest.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfTest"
        Title="LinearGradientBrush" Height="600" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="200" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <local:LinearGradientBrushControl 
            Grid.Row="0"
            BorderThickness="5"
            BorderBrush="Brown"
         />
        <local:LinearGradientBrushControl 
            Grid.Row="1"
            BorderThickness="3"
            BorderBrush="Brown"
            StartColor="Green"
            StopColor="Yellow"
        />
        <local:LinearGradientBrushControl
            Grid.Row="2"
            Style="{StaticResource CircleStyle}"
            BorderThickness="1"
            BorderBrush="Brown"
            StartColor="Green"
            StopColor="Yellow"
          />
    </Grid>
</Window>
